<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Express App with Bootstrap</title>
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Linking CSS file -->
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Task Title</label>
      <input type="text" class="form-control w-50" id="exampleFormControlInput1" placeholder="Title goes here">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Enter Tasks here</label>
      <textarea class="form-control fixed-textarea" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <button type="button" class="btn btn-outline-info text-black fw-bold">Add Task</button>

    <div class="d-flex flex-wrap mt-3">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="border border-primary rounded mb-3 me-3">
            <h3>Your first task is here</h3>
            <a href="#">Read More.</a>
          </div>
        <% }) %>
      <% } else { %>
        <h3>No tasks found.</h3>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Linking JS file -->
  <script src="/js/script.js"></script>
</body>
</html>
